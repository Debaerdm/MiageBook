<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<display-name>MiageBook</display-name>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginManager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InscriptionServlet</servlet-name>
        <servlet-class>servlet.InscriptionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InscriptionServlet</servlet-name>
        <url-pattern>/InscriptionManager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logoutService</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SuppressionAmisServlet</servlet-name>
        <servlet-class>servlet.SuppressionAmisServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SuppressionAmisServlet</servlet-name>
        <url-pattern>/suppressionAmisManager</url-pattern>
    </servlet-mapping>

  <display-name>JSPExceptionHandling</display-name>
  <welcome-file-list>
    <welcome-file>myindex.jsp</welcome-file>
  </welcome-file-list>

