<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<display-name>MiageBook</display-name>

<servlet>
  <servlet-name>simpleServlet</servlet-name>
  <servlet-class>SimpleServlet</servlet-class>
  <load-on-startup>1</load-on-startup>
</servlet>
<servlet-mapping>
  <servlet-name>simpleServlet</servlet-name>
  <url-pattern>/hello</url-pattern>
</servlet-mapping>

  <display-name>JSPExceptionHandling</display-name>
  <welcome-file-list>
    <welcome-file>/myindex.jsp</welcome-file>
  </welcome-file-list>

  <!--<error-page> <error-code>404</error-code> <location>/error.jsp</location>
  </error-page>
  <error-page> <exception-type>java.lang.Throwable</exception-type> <location>/error.jsp</location>
  </error-page>-->

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

</web-app>
